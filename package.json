{
  "name": "anonymous-bonus-distribution",
  "version": "1.0.0",
  "description": "Anonymous Bonus Distribution - Team Incentive Privacy System using FHEVM. All dependencies locked to exact versions for reproducible builds.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "clean": "rimraf ./fhevmTemp ./artifacts ./cache ./coverage ./types ./coverage.json && npm run typechain",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "test": "hardhat test",
    "deploy": "hardhat run scripts/deploy.ts --network sepolia",
    "verify": "hardhat verify --network sepolia",
    "coverage": "SOLIDITY_COVERAGE=true hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"test/**/*.ts\" && npm run typechain",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --ignore-path ./.eslintignore --ext .js,.ts .",
    "prettier:check": "prettier --check \"**/*.{js,json,md,sol,ts,yml}\"",
    "prettier:write": "prettier --write \"**/*.{js,json,md,sol,ts,yml}\"",
    "postcompile": "npm run typechain",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain"
  },
  "dependencies": {
    "@fhevm/solidity": "0.7.0",
    "@openzeppelin/contracts": "5.4.0",
    "@openzeppelin/contracts-upgradeable": "5.4.0",
    "ethers": "6.15.0",
    "lucide-react": "^0.463.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "terser": "5.44.0"
  },
  "devDependencies": {
    "@eslint/js": "9.35.0",
    "@fhevm/hardhat-plugin": "0.0.1-3",
    "@nomicfoundation/hardhat-chai-matchers": "2.1.0",
    "@nomicfoundation/hardhat-ethers": "3.1.0",
    "@nomicfoundation/hardhat-network-helpers": "1.1.0",
    "@nomicfoundation/hardhat-verify": "2.1.1",
    "@typechain/ethers-v6": "0.5.1",
    "@typechain/hardhat": "9.1.0",
    "@types/chai": "4.3.20",
    "@types/mocha": "10.0.10",
    "@types/node": "20.19.13",
    "@types/react": "18.3.24",
    "@types/react-dom": "18.3.7",
    "@typescript-eslint/eslint-plugin": "7.18.0",
    "@typescript-eslint/parser": "7.18.0",
    "@vitejs/plugin-react": "4.7.0",
    "chai": "4.5.0",
    "chai-as-promised": "8.0.2",
    "cross-env": "7.0.3",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.1.2",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-react-refresh": "0.4.20",
    "globals": "15.15.0",
    "hardhat": "2.26.3",
    "hardhat-deploy": "0.11.45",
    "hardhat-gas-reporter": "2.3.0",
    "mocha": "11.7.2",
    "prettier": "3.6.2",
    "prettier-plugin-solidity": "1.4.3",
    "rimraf": "6.0.1",
    "solhint": "5.2.0",
    "solhint-plugin-prettier": "0.1.0",
    "solidity-coverage": "0.8.16",
    "ts-generator": "0.1.1",
    "ts-node": "10.9.2",
    "typechain": "8.3.2",
    "typescript": "5.9.2",
    "typescript-eslint": "8.43.0",
    "vite": "5.4.20"
  },
  "keywords": [
    "fhevm",
    "zama",
    "bonus",
    "distribution",
    "privacy",
    "anonymous",
    "team",
    "incentive",
    "ethereum",
    "blockchain",
    "encryption",
    "web3",
    "react",
    "typescript"
  ],
  "author": "Anonymous Bonus Distribution Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "files": [
    "contracts",
    "scripts",
    "test",
    "types"
  ],
  "overrides": {
    "ws": "8.18.0",
    "axios": "1.7.8",
    "elliptic": "6.6.0",
    "micromatch": "4.0.8",
    "undici": "6.21.1",
    "cookie": "0.7.1",
    "minimatch": "3.1.2"
  }
}
